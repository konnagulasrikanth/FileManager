<Window x:Class="FileManager.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileManager"
        mc:Ignorable="d"
        Title="InputDialog" Height="450" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="350" Margin="20">
            <TextBlock Text="Enter the name of the new folder:" Margin="0,0,0,10" HorizontalAlignment="Center"/>
            <TextBox x:Name="FolderNameTextBox" Height="38" Width="330" Margin="0,0,0,20" HorizontalAlignment="Center"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="OK" Width="75" Margin="0,0,10,0" Click="OkButton_Click"/>
                <Button Content="Cancel" Width="75" Click="CancelButton_Click"/>
            </StackPanel>
        </StackPanel>

    </Grid>
</Window>
